{
  "root": true,
  "env": {
    "node": true
  },
  "extends": [
    "plugin:vue/essential",
    "eslint:recommended",
    "@vue/prettier"
  ],
  "parserOptions": {
    "parser": "babel-eslint"
  },
  "rules": {
      "vue/valid-v-slot": ["error", {
          "allowModifiers": true
      }],
      "max-len": [1, { "code": 120, "tabWidth": 2 }]
  }
}